<?xml version="1.0" encoding="UTF-8" ?>
<yummi:PancakeView
    x:Class="SearchPanel.SearchBar"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:yummi="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    x:Name="MainPanel"
    Padding="0"
    CornerRadius="28,0,28,0"
    HeightRequest="56"
    HorizontalOptions="EndAndExpand"
    WidthRequest="56">
    <Grid
        x:Name="PanelGrid"
        Padding="4"
        BackgroundColor="Transparent"
        ColumnDefinitions="48,*,32">
        <Grid>
            <BoxView x:Name="CircleBox" CornerRadius="24" />
            <StackLayout
                HorizontalOptions="Center"
                InputTransparent="True"
                VerticalOptions="Center">
                <Label
                    x:Name="SearchIcon"
                    FontFamily="Icons"
                    FontSize="24"
                    InputTransparent="True"
                    Text="&#xF0349;" />
            </StackLayout>
        </Grid>
        <Entry x:Name="SearchText" Grid.Column="1" />
        <Label
            x:Name="ClosePanelIcon"
            Grid.Column="2"
            Padding="4"
            FontFamily="Icons"
            FontSize="24"
            HorizontalTextAlignment="Center"
            Text="&#xF0156;"
            VerticalTextAlignment="Center" />
    </Grid>
</yummi:PancakeView>